<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!-- Homepage application theme. -->
    <style name="HomepageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorErrorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorHintText</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- Design my text input layout -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

        <!-- colorControlNormal is the underline color -->
        <item name="colorControlNormal">@android:color/black</item>

        <!-- colorControlActivated is the color when focused-->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <!-- colorControlHighlight is -->
        <item name="colorControlHighlight">#FF4FB000</item>
    </style>


    <style name="HintTextEP" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearanceDN" parent="Widget.Design.TextInputLayout">
        <!-- Design my text input layout -->
        <item name="hintTextAppearance">@style/HintTextEP</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorAccent</item>

        <!-- colorControlNormal is the underline color -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- colorControlActivated is the color when focused-->
        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- colorControlHighlight is -->
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>



</resources>
