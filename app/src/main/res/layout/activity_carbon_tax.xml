<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarbonTaxActivity">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewCT"
        android:layout_width="346dp"
        android:layout_height="384dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        card_view:cardCornerRadius="10dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/carbontax"
             android:layout_marginTop="50dp"
             android:layout_marginLeft="45dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equivalent to"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="45dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Carbon Credits"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="45dp"/>

        <TextView
            android:id="@+id/textViewTaxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/textViewConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="100dp" />

        <TextView
            android:id="@+id/textViewCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="150dp" />




        <TextView
            android:id="@+id/textViewCTInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="230dp"
            android:text="*Transaction Fees included" />

        <ImageView
            android:id="@+id/imageViewSecure"
            android:layout_width="128dp"
            android:layout_height="103dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="250dp"
            card_view:srcCompat="@drawable/securepayment" />

        <TextView
            android:id="@+id/textViewSPInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="352dp"
            android:text="100% Secure Payment Gateway" />


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnOB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/signin_btn_bg"
        android:fontFamily="@font/open_sans"
        android:text="PAY BY ONLINE BANKING"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCC"
        app:layout_constraintVertical_bias="0.091" />

    <Button
        android:id="@+id/btnCC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/signin_btn_bg"
        android:fontFamily="@font/open_sans"
        android:text="Pay By Carbon Credits"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_viewCT" />
</android.support.constraint.ConstraintLayout>